<div class="container account-page">
  <div data-hook="account_my_wishlists" class="account-page-orders mb-3" id="account-my-wishlists">
    <h3 class="text-uppercase"><%= Spree.t(:editing_wishlist) %></h3>

    <%= form_for @wishlist do |f| %>
      <p><%= f.label :name, Spree.t(:name) %>:&nbsp;<%= f.text_field :name %></p>
      <p><%= f.check_box :is_private %>&nbsp;<%= f.label :is_private, Spree.t(:is_private) %></p>
      <p><%= f.check_box :is_default %>&nbsp;<%= f.label :is_default, Spree.t(:is_default) %></p>
      <%= f.submit Spree.t(:update), class: 'btn btn-sm btn-primary' %>
      <%= Spree.t(:or) %>
      <%= link_to Spree.t(:delete_wishlist), @wishlist, method: :delete, data: { confirm: Spree.t(:are_you_sure_wishlist) }, class: 'btn btn-sm btn-danger' %>
    <% end -%>  
  </div>
</div>
